<LinearLayout
    android:id="@+id/tabTopicView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected topic: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selectedTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="general"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change topic:"
        android:textSize="16sp"
        android:paddingTop="10dp" />

    <com.adsolutions.englishapp.CustomAutoCompleteTextView
        android:id="@+id/topicDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="8dp"
        android:hint="Show and lookup topics e.g. time" />

</LinearLayout>